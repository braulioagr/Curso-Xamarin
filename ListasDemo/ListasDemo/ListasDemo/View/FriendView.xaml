<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ListasDemo.View.FriendView">
    <ContentPage.Content>
        <StackLayout>
            <Label
                Text="First Name:"/>
            <Entry
                Placeholder="Braulio"
                Text="{ Binding NewFriend.FirstName }"></Entry>
            <Label
                Text="Phone:"/>
            <Entry
                Placeholder="(333)12345"
                Text="{ Binding NewFriend.Phone }"></Entry>
            <Label
                Text="Email:"/>
            <Entry
                Placeholder="e@mail.com"
                Text="{ Binding NewFriend.Email }"></Entry>
            <Button HeightRequest="100"
                    Text="SaveFriend: "
                    Command="{Binding SaveFriendCommand}"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>